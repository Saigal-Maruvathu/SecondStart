<h1>Jobs Posted</h1>

<body>

  <h4><% @posts.each do |post| %></h4>
    <div id="alljobs" style="background-color:lightblue ">
    <p>Posted by:
        <%= post.center.name %>
    </p>

    <p><strong><%= post.title %></strong>

    </p>

    <p>
        <%= post.content %>

    </p>

    <p>Posted on:
        <%=post.updated_at.strftime("%B %d, %Y") %>
    </p>

    <br>

    <% end %>

</body>
